@inject IExerciseService ExerciseService


<h3>ExerciseList</h3>

@if (exercises == null)
{
    <p>@Message</p>
}
else
{
    <ul class="list-unstyled">
        @foreach (var exercise in exercises)
        {
            <li class="media my-3">
                <div class="media-img-wrapper mr-2">
                    <a href="/exercise/@exercise.Id">
                        <img class="media-img" src="@exercise.gifUrl" alt="@exercise.Name">
                    </a>
                </div>
                <div>
                    <a href="/exercise/@exercise.Id">
                        <h4 class="mb-0">@exercise.Name</h4>
                    </a>
                    <p>@exercise.Target</p>
                </div>
            </li>
        }
    </ul>
}


@code {
    private List<Exercise> exercises;

    public string Message { get; set; } = "Loading exercises...";

    protected override async Task OnInitializedAsync()
    {
        var response = await ExerciseService.GetExercises();
        if (!response.Success)
        {
            Message = response.Message;
        }
        exercises = response.Data;


    }
}